<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/commonListItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_swipe_item_neutral"
        android:outlineProvider="bounds"
        android:clipToPadding="false"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:elevation="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp">

    <FrameLayout
            style="@style/commonListItemStyle"
            android:elevation="10dp"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_item_normal_state"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            tools:ignore="UselessParent">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageView
                    android:background="@color/Magenta"
                    android:id="@+id/top_line_highlight"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="2dp" />

            <TextView
                    style="@style/sectionHeaderItemStyle"
                    android:id="@+id/task_project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="32dp"
                    android:text="Project title"
                    tools:ignore="RtlHardcoded"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="16dp" />

            <TextView
                    style="@style/sectionHeaderItemStyle"
                    android:id="@+id/task_project_tasks_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(16)"
                    android:textSize="12dp"
                    tools:ignore="RtlHardcoded"
                    app:layout_constraintStart_toEndOf="@+id/task_project_name"
                    app:layout_constraintBottom_toBottomOf="@+id/task_project_name"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="1.5dp" />

            <ImageView
                    android:id="@+id/indicator"
                    android:src="@drawable/ic_expand_less_to_expand_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="8dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>
