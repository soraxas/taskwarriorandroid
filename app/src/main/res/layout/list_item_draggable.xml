<!-- NOTE: should use FrameLayout or RelativeLayout for parent of the "@id/container" view (for Android 2.3 compatibility) -->
<FrameLayout style="@style/commonListItemStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_swipe_item_neutral"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_item_normal_state"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UselessParent">

        <!-- NOTE: the drag handle should set android:clickable=true not to propagate click events to the parent views -->

        <TextView
            android:id="@+id/task_started_flag"
            android:layout_width="16dp"
            android:layout_marginLeft="6dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:textColor="@color/Green"
            android:text="âž¤"/>


        <ProgressBar
            android:id="@+id/task_priority"
            style="@style/VerticalBar"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:max="100"
            android:progress="20" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:longClickable="false"
                android:clickable="false"
                android:enabled="false"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/task_description_outer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/list_item_height"
                    android:longClickable="false"
                    android:clickable="false"
                    android:enabled="false"
                    android:orientation="horizontal">

<!--                    <TextView-->
<!--                        android:id="@+id/task_description"-->
<!--                        style="@style/ClickableText"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:gravity="center_vertical"-->
<!--                        android:layout_marginLeft="8dp"-->
<!--                        android:layout_weight="1"-->
<!--                        android:clickable="false"-->
<!--                        android:enabled="false"-->
<!--                        android:text="Task description"-->
<!--                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"-->
<!--                        android:textColor="@color/colorText" />-->\
                    <TextView
                        android:id="@android:id/text1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/list_item_height"
                        android:layout_gravity="top|left"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="32dp"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Task description"

                        android:textColor="@color/colorText"
                        tools:ignore="RtlHardcoded" />


                    <android.widget.ImageView
                        android:id="@+id/task_annotations_flag"
                        style="@style/IconImage"
                        android:layout_gravity="top"
                        android:longClickable="false"
                        android:clickable="false"
                        android:enabled="false"
                        android:src="@drawable/ic_more" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:longClickable="false"
                    android:clickable="false"
                    android:enabled="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/task_labels_left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:longClickable="false"
                        android:clickable="false"
                        android:enabled="false"
                        android:orientation="vertical">
                        <!--<include layout="@layout/item_one_label_left"/>-->
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/task_labels_right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:longClickable="false"
                        android:clickable="false"
                        android:enabled="false"
                        android:orientation="vertical">
                        <!--<include layout="@layout/item_one_label_right"/>-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        <ProgressBar
            android:id="@+id/task_urgency"
            style="@style/VerticalBar"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:max="100"
            android:progress="50" />

    </FrameLayout>

</FrameLayout>









