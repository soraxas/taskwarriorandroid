<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <soraxas.taskw.utils.ViewGroupInterceptor
        android:id="@+id/task_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/task_priority"
            style="@style/VerticalBar"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:max="100"
            android:progress="20" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:focusable="true"
            android:clickable="true"
            android:longClickable="true"
            android:id="@+id/task_view_inner"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:longClickable="false"
                android:clickable="false"
                android:enabled="false"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/task_description_outer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:longClickable="false"
                    android:clickable="false"
                    android:enabled="false"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/task_description"
                        style="@style/ClickableText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:enabled="false"
                        android:text="Task description"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorText" />

                    <android.widget.ImageView
                        android:id="@+id/task_annotations_flag"
                        style="@style/IconImage"
                        android:layout_gravity="top"
                        android:longClickable="false"
                        android:clickable="false"
                        android:enabled="false"
                        android:src="@drawable/ic_more" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/cal_label_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:longClickable="false"
                    android:clickable="false"
                    android:enabled="true"
                    android:orientation="horizontal">

<!--                    <LinearLayout-->
<!--                        android:id="@+id/task_labels_left"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_weight="0.5"-->
<!--                        android:longClickable="false"-->
<!--                        android:clickable="false"-->
<!--                        android:enabled="false"-->
<!--                        android:orientation="vertical">-->
<!--                        &lt;!&ndash;<include layout="@layout/item_one_label_left"/>&ndash;&gt;-->
<!--                    </LinearLayout>-->

<!--                    <LinearLayout-->
<!--                        android:id="@+id/task_labels_right"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_weight="0.5"-->
<!--                        android:longClickable="false"-->
<!--                        android:clickable="false"-->
<!--                        android:enabled="false"-->
<!--                        android:orientation="vertical">-->
<!--                        &lt;!&ndash;<include layout="@layout/item_one_label_right"/>&ndash;&gt;-->
<!--                    </LinearLayout>-->
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <ProgressBar
            android:id="@+id/task_urgency"
            style="@style/VerticalBar"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:max="100"
            android:progress="50" />
    </LinearLayout>
    </soraxas.taskw.utils.ViewGroupInterceptor>
</LinearLayout>